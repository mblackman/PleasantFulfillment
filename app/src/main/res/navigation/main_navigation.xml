<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="app.mblackman.orderfulfillment.ui.orders.OrdersFragment"
        android:label="main_fragment"
        tools:layout="@layout/order_details_fragment">
        <action
            android:id="@+id/action_mainFragment_to_loginActivity"
            app:destination="@id/login_activity" />
    </fragment>
    <activity
        android:id="@+id/login_activity"
        android:name="app.mblackman.orderfulfillment.LoginActivity"
        android:label="login_activity"
        tools:layout="@layout/login_activity" />
</navigation>